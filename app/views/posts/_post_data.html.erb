<div id="each-post-info">
    <h3 id="post-title"><%= link_to "#{post.title} ##{i}", user_post_path(@user, post) %></h3>
    <p id="post-text"><%= post.text %></p>
    <div id="post-counts">
        <p id="count-text">Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></p>
    </div>
</div>