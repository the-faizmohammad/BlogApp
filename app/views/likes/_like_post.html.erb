<%= form_with(model: @like, url: user_post_likes_path(user_id: post.author_id, post_id: post.id), local: true, class: 'like-form') do |form| %>
    <div>
      <% if @like.errors.any? %>
        <div class="error-flash">
          <%= "Error: #{pluralize(@like.errors.count, 'error')} prohibited this like from being saved." %>
        </div>
        <ul>
          <% @like.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
  
      <%= form.hidden_field :user_id, value: @like.user_id %>
      <%= form.hidden_field :post_id, value: @like.post_id %>
      <%= form.submit "Like Post" %>
    </div>
  <% end %>
  